{% extends "layout/default.twig" %}

{% block content %}
  <div class="article">
    <div class="section content-coverimage" style="background-image: url({{post.getCoverImage()}})">
    </div>


    
    <div class="section content-section content-pageheader content-text">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-lg-10 offset-lg-1 content-two-thirds">

            <div class="customers {{post.getBgCss()}}" {{post.getColorAttrs()}}>
              {{post.getCustomers()}}
            </div>

            <h1>{{post.post_title}}</h1>

            <div class="ingress">
              {{post.getIngress()}}
            </div>
          </div>
        </div>
      </div>
    </div>


    
    {% for field in post.getContent() %}
      {{ include("modules/content-field-#{field.getType()}.twig") }}
    {% else %}
      <div class="section content-section content-text">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-lg-10 offset-lg-1 content-two-thirds">
              <em>Dette caset mangler innhold.</em>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

    
    {% if post.getLink() %}
      <div class="section content-section content-link">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-lg-10 offset-lg-1 content-two-thirds">
              <a href="{{post.getLink().url}}">GÃ¥ til {{post.getLink.title}}</a>
            </div>
          </div>
        </div>
      </div>
    {% endif %}


    
    {% if post.getNext() %}
      {% include "modules/content-field-next.twig" with { "next": post.getNext() } %}
    {% endif %}
  
  </div>
{% endblock %}
