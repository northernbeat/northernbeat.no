{% extends "layout/default.twig" %}

{% block content %}
  <article>

    {% if page.noHeader %}
    {% else %}
      <section class="content-section content-pageheader content-text">
        <div class="container">
          <div class="row">
            <div class="col-lg-10 col-lg-offset-1 two-thirds">
              <h1 class="has-branding">{{post.post_title}}</h1>
              
              {% if post.getIngress() %}
                <div class="ingress">
                  {{post.getIngress()}}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </section>
    {% endif %}


    
    {% for field in post.getContent() %}
      {{ include("modules/content-field-#{field.getType()}.twig") }}
    {% else %}
      <section class="content-section content-text">
        <div class="container">
          <div class="row">
            <div class="col-lg-10 col-lg-offset-1 two-thirds">
              <em>Denne siden mangler innhold.</em>
            </div>
          </div>
        </div>
      </section>
    {% endfor %}

  </article>
{% endblock %}
