{% extends "layout/default.twig" %}

{% block content %}
  <div class="article">

    {% if page.noHeader %}
    {% else %}
      <div class="section content-section content-pageheader content-text">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-lg-10 offset-lg-1 content-two-thirds">
              <h1 class="has-branding">{{post.post_title}}</h1>
              
              {% if post.getIngress() %}
                <div class="ingress">
                  {{post.getIngress()}}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endif %}


    
    {% for field in post.getContent() %}
      {{ include("modules/content-field-#{field.getType()}.twig") }}
    {% else %}
      <div class="content-section content-text">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-lg-10 offset-lg-1 content-two-thirds">
              <em>Denne siden mangler innhold.</em>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

  </div>
{% endblock %}
