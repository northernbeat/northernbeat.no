{% extends "layout/default.twig" %}

{% block content %}
  <div class="article">

    <div class="section content-section content-pageheader content-text">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-lg-10 offset-lg-1 content-two-thirds">
            <h1 class="has-branding">{{post.post_title}}</h1>

            <div class="ingress">
              {{post.getIngress()}}
            </div>
          </div>
        </div>
      </div>
    </div>


    
    {% for field in post.getContent() %}
      {{ include("modules/content-field-#{field.getType()}.twig") }}
    {% else %}
      <div class="section content-section content-text">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-lg-10 offset-lg-1 content-two-thirds">
              <em>Denne tjenesten mangler innhold.</em>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

  </div>
{% endblock %}
