<!doctype html>
<html {{ site.language_attributes }}>

  <head>
    <meta charset="{{ site.charset|e('html_attr') }}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="{{ site.description|e('html_attr') }}" />
    <meta name="vigewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ wp_title }}</title>

    <link rel="stylesheet" media="all" href="{{ site.theme.link }}/style.css" />

    {{ function('wp_head') }}
  </head>

  <body class="{{ body_class|e('html_attr') }}">
    {% block header %}
      {% include "layout/header.twig" %}
    {% endblock %}
      
    <div class="pagecontent">
      {% block content %}
        Sorry, no content.
      {% endblock %}
    </div>
    
    {% include "layout/footer.twig" %}

    <div id="wpfooter">
    {{wp_footer}}
    </div>
    <script src="{{ site.theme.link }}/js/scripts.js"></script>

  </body>
</html>
