{% extends "modules/content-field.twig" %}

{% block fieldContent %}
  <div class="content-section content-text">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-lg-10 offset-lg-1">

          {% if field.getHeading() %}
            <h2 class="content-two-thirds">{{field.getHeading()}}</h2>
          {% endif %}

          {% if field.getText() %}
            <div class="text content-two-thirds text-columns-{{field.getNumColumns()}}">
              {{field.getText()}}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
