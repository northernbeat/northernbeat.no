<li class="list-item employee">
  <div class="photo">
    <a href="{{post.link}}">
      <img src="{{post.getPhoto()|default("/wp-content/themes/NorthernBeat3/img/person.svg")}}" alt="{{post.getFirstname()}} {{post.getLastname()}}" />
    </a>
  </div>
  <div class="details">
    <h2 class="name"><a href="{{post.link}}">{{post.getFirstname()}}<br />{{post.getLastname()}}</a></h2>
    <div class="role">{{post.getTitle()}}</div>
    <div class="email"><a href="mailto:{{post.getEmail()}}">{{post.getEmail()}}</a></div>
    <div class="phone">{{post.getPhone()}}</div>
  </div>
</li>
