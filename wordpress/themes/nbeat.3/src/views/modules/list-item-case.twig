<li class="list-item">
  <a href="{{post.link}}">
    <div class="bg-img" style="background-image: url({{post.getThumbImage()|default("/wp-content/themes/NorthernBeat3/img/case.svg")}});"></div>
    <div class="content {{post.getThumbCssClasses()}}" {{post.getColorAttrs()}}>
      <h3 class="title">{{post.getThumbTitle()}}</h3>
      <div class="byline">{{post.getCustomers()}}</div>
      <div class="text">{{post.getThumbIngress()}}</div>
    </div>
  </a>
</li>
